mixin navbar
     a.navbar-brand(href="/") #{__('Home')}
     button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbars01")
          span.navbar-toggler-icon
     div(id="navbars01").collapse.navbar-collapse
          ul.navbar-nav.mr-auto
               - if (title.localeCompare(__('Studies'))==0)
                    li.nav-item.active
                         a.nav-link(href="/studies") #{__('Studies')}
               -else
                    li.nav-item
                         a.nav-link(href="/studies") #{__('Studies')}
               - if (title.localeCompare(__('Skills'))==0)
                    li.nav-item.active
                         a.nav-link(href="/skills") #{__('Skills')}
               -else
                    li.nav-item
                         a.nav-link(href="/skills") #{__('Skills')}
               - if (title.localeCompare(__('About'))==0)
                    li.nav-item.active
                         a.nav-link(href="/about") #{__('About')}
               -else
                    li.nav-item
                         a.nav-link(href="/about") #{__('About')}
                         
